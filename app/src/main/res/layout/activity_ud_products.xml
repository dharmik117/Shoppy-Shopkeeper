<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    tools:context=".UD_Products">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Your Products"
        android:textSize="@dimen/_30sdp"
        android:textColor="@color/Black"
        android:layout_centerHorizontal="true"
        android:id="@+id/udtext"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/udproductname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/udtext"
        android:inputType="textMultiLine"
        android:layout_marginTop="70dp"
        android:padding="20dp"
        android:hint="Product Name"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/etframe"
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/udproductdescryption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/udproductname"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:hint="Product Descryption"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/etframe"/>

    <EditText
        android:id="@+id/udproductcatgeroy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/udproductdescryption"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:hint="Product Category"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/etframe"/>

    <EditText
        android:id="@+id/udproductprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/udproductcatgeroy"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:hint="Price"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/etframe"/>

    <Button
        android:id="@+id/udupdatebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/udproductprice"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/capbtn"
        android:padding="17dp"
        android:text="Update Product"
        android:textAllCaps="false"
        android:textSize="18dp" />

    <Button
        android:id="@+id/uddeletebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/udupdatebtn"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/capbtn"
        android:padding="17dp"
        android:text="Delete Product"
        android:textAllCaps="false"
        android:textSize="18dp" />




</RelativeLayout>
